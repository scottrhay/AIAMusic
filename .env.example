# AIASpeech Environment Variables
# Copy this file to .env and fill in your actual values

# Secret Keys (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
DB_NAME=aiaspeech_db
DB_USER=aiaspeech_user
DB_PASSWORD=your-database-password-here

# Domain (for CORS and SSL)
DOMAIN=speech.aiacopilot.com

# CORS Configuration
CORS_ORIGINS=https://speech.aiacopilot.com,http://localhost:3000

# n8n Webhook Configuration
N8N_WEBHOOK_URL=https://your-n8n-domain.com/webhook/your-webhook-id

# Azure Speech API Configuration
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=eastus2
AZURE_SPEECH_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_TTS_ENDPOINT=https://eastus2.tts.speech.microsoft.com
AZURE_STT_ENDPOINT=https://eastus2.stt.speech.microsoft.com

# Microsoft OAuth Configuration
MICROSOFT_CLIENT_ID=your-client-id-here
MICROSOFT_CLIENT_SECRET=your-client-secret-here
MICROSOFT_TENANT_ID=consumers
MICROSOFT_REDIRECT_URI=https://speech.aiacopilot.com/api/v1/auth/microsoft/callback
FRONTEND_URL=https://speech.aiacopilot.com

APP_URL=https://speech.aiacopilot.com
